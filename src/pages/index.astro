---
import Layout from '@/layouts/Layout.astro'
import { Image } from 'astro:assets'
import { InputWithButton } from '@/components/InputWithButton'
import { Button } from '@/components/ui/button'
import { Input } from '@/components/ui/input'
---

<Layout title="email-subscribe">
  <!-- background containter -->
  <div class="flex min-h-screen items-center justify-center bg-zinc-700">
    <!-- Card -->
    <div class="flex flex-col rounded-xl bg-zinc-800 p-2 md:flex-row">
      <!-- image -->
      <img
        src="/subscriber.jpg"
        alt="subpic"
        class="h-80 rounded-xl object-cover duration-200 hover:scale-105 md:h-64"
      />
      <!-- text -->
      <div class="p-6 text-center text-white md:p-12 md:text-left">
        <h2 class="font-serif text-xl font-medium">
          Get diet and fitness tips in your inbox
        </h2>
        <p class="my-4 max-w-xs text-xs leading-5 tracking-wide">
          Eat better and exercise better. Sign up for the Diet&Fitness
          newsletter.
        </p>

        <div
          class="mt-5 flex flex-col space-y-4 md:flex-row md:space-x-3 md:space-y-0"
        >
          <input
            type="text"
            placeholder="Enter your email address"
            class="border border-zinc-600 bg-zinc-800 p-2 px-4 text-center text-white placeholder:text-center placeholder:text-xs focus:outline-none md:flex-1 md:text-left placeholder:md:text-left"
          />

          <button
            class="rounded-md bg-lime-500 px-5 py-3 text-xs text-zinc-800 duration-500 hover:bg-lime-700 hover:text-white"
          >
            Subcribe
          </button>
        </div>
        <InputWithButton />
      </div>
    </div>
  </div>
</Layout>
