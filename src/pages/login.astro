---
import login from '@/assets/login.jpg'
import { Button } from '@/components/ui/button'
import { Input } from '@/components/ui/input'
import Layout from '@/layouts/Layout.astro'
import { Separator } from '@/components/ui/separator'
import { Image } from 'astro:assets'
import { ArrowRight } from 'lucide-react'
import Icon from 'astro-icon'
---

<Layout title="login">
  <div class="flex min-h-screen items-center justify-center bg-rose-200">
    <div class="mx-2 flex flex-col bg-white p-5 md:flex-row">
      <div class="m-2 flex flex-col space-y-3">
        <h2>Logo in</h2>
        <p class="max-w-sm">
          Log in to your account to upload or download pictures, videos or
          music.
        </p>
        <Input placeholder="Entre your email address " className="border" />
        <div class="flex flex-col md:flex-row md:justify-between">
          <p>Forgot password</p>
          <Button className=" md:w-auto">
            Next <ArrowRight className="mx-1" />
          </Button>
        </div>
        <Separator />
        <p class="text-center">Or log in with</p>
        <div
          class="flex flex-col space-y-3 md:flex-row md:space-x-3 md:space-y-0"
        >
          <Button variant={'outline'} className="md:w-1/2">
            <Icon name="flat-color-icons:google" class="h-8 w-8" /> Google
          </Button>
          <Button variant={'outline'} className="md:w-1/2">
            <Icon name="openmoji:facebook" class="h-8 w-8" /> Facebook
          </Button>
        </div>
      </div>
      <Image src={login} alt="login" class="hidden w-[430px] md:block" />
    </div>
  </div>
</Layout>
